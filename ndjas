local Mercury = loadstring(game:HttpGet("https://raw.githubusercontent.com/RaCc0oN1/RobloxObf/main/ReworkMercury"))()
---
--- GUI create
local GUI = Mercury:Create{
    Name = "Mercury",
    Size = UDim2.fromOffset(600, 400),
    Theme = Mercury.Themes.Dark,
    Link = "https://github.com/deeeity/mercury-lib"
}
---
local ismobile = game:GetService("UserInputService").TouchEnabled
if ismobile then
    local RaCc0oNScrGUI = Instance.new("ScreenGui")
    local RaCc0oNImg = Instance.new("ImageButton")
    local UICorner = Instance.new("UICorner")
    local VIM = game:GetService("VirtualInputManager")
    local Keytosend = Enum.KeyCode.Delete

    RaCc0oNScrGUI.Name = "RaCc0oNScrGUI"
    RaCc0oNScrGUI.Parent = game.CoreGui
    RaCc0oNScrGUI.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    RaCc0oNImg.Name = "RaCc0oNImg"
    RaCc0oNImg.Parent = RaCc0oNScrGUI
    RaCc0oNImg.BackgroundColor3 = Color3.fromRGB(67, 62, 132)
    RaCc0oNImg.BackgroundTransparency = 1.000
    RaCc0oNImg.BorderColor3 = Color3.fromRGB(0, 0, 0)
    RaCc0oNImg.BorderSizePixel = 0
    RaCc0oNImg.Size = UDim2.new(0, 50, 0, 50)
    RaCc0oNImg.Image = "rbxassetid://3821457207"
    RaCc0oNImg.Draggable = true
    RaCc0oNImg.Selectable = true
    RaCc0oNImg.Active = true

    UICorner.CornerRadius = UDim.new(0, 100)
    UICorner.Parent = RaCc0oNImg

    RaCc0oNImg.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
            VIM:SendKeyEvent(true, Keytosend, false, game)
        end
    end)
end
--- Tab
local main = GUI:Tab{
	Name = "Dupe Feauter",
	Icon = "rbxassetid://8569322835"
}
local selected_item = "FireEssence"
local Amount = 10
local playersz = {}
local selected_player
local ppls = main:Dropdown{
	Name = "Select Player",
	StartingText = "Select...",
	Description = nil,
	Items = {
        
	},
	Callback = function(item)
        selected_player = item
    end
} 
main:Button{
	Name = "Refresh Players",
	Description = nil,
	Callback = function()
        for _,v in pairs(playersz) do
            pcall(function()
                ppls:RemoveItems({v})
            end)
        end
        playersz = {}
        for _,v in pairs(game.Players:GetChildren()) do
            local state = true
            for _, z in pairs(playersz) do
                if z == v.Name then
                    state = false
                    break
                end
            end
            if state then
                table.insert(playersz, v.Name)
            end
        end
        table.sort(playersz)
        for _,v in pairs(playersz) do
            ppls:AddItems({v})
        end
    end
}
main:Dropdown{
	Name = "Select Item to trade",
	StartingText = "Select...",
	Description = nil,
	Items = {
        "FireEssence", "WaterEssence", "CosmicEssence", "NatureEssence" , "LightEssence", "DarkEssence", "GrimoirePage", "SoulCandy", "MythicSpiritShard", "PerfectStatCube", "StatCube"
	},
	Callback = function(item)
        selected_item = item
    end
} 

main:Textbox{
	Name = "Select Amount",
	Callback = function(text)
        if tonumber(text) then
            Amount = tonumber(text)
        end
    end
}

main:Button{
	Name = "Trade Item!",
	Description = nil,
	Callback = function()
        local args = {
            [1] = selected_item,
            [2] = game.Players:FindFirstChild(selected_player).PlayerId,
            [3] = Amount
        }
        game:GetService("ReplicatedStorage").Remotes.GiftEvoItems:FireServer(unpack(args))
    end
}

